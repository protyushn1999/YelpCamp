<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card">
            <img src="<%= campground.image %>" class="card-img-top" alt="Casmpground Image">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text "><%= campground.description %></p>
              <p class="card-text text-black-50"><%= campground.location %></p>
              <p class="card-text ">$<%= campground.price %>/night</p>
              </div>
              <div class="row justify-content-center mb-3">
                <div class="col-auto">
                  <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-info">Edit</a>
                </div>
                <div class="col-auto">
                  <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
                </div>
                <div class="col-auto">
                    <a href="/campgrounds" class="btn btn-success">Back</a>
                  </div>
              </div>
            </div>
        </div>
    </div>
</div>
