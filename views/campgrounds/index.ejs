<% layout('layouts/boilerplate') -%>
<div class="row mb-3">
    <div class="col">
      <h1>All Campgrounds</h1>
    </div>
    <div class="col-auto">
      <a href="/campgrounds/new" class="btn btn-primary">Add new campground</a>
    </div>
  </div>
  
<% for(let campground of campgrounds) {%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img src="<%= campground.image%>" alt="campground image" class="img-fluid" height="250px" >
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title%></h5>
                    <p class="card-text"><%= campground.description%></p>
                    <p class="card-text">
                        <small class="text-light"><%= campground.location%></small>
                    </p>
                    <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">Check it!</a>
                </div>
            </div>
        </div>
    </div>
<% }%>  